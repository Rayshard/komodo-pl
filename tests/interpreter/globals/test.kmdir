(program MyProgram
    (entry MyModule Main)
    (module MyModule
        (globals
            (I64 myDefaultGlobal)
            (Bool mySetGlobal true)
        )

        (function Main
            (Assert (global MyModule myDefaultGlobal) 0)
            (Assert (global MyModule mySetGlobal) true)

            (Store 1 (global MyModule myDefaultGlobal))
            (Assert (global MyModule myDefaultGlobal) 1)

            (Exit 0)
        )
    )
)