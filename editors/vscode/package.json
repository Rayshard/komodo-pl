{
  "name": "komodo",
  "displayName": "Komodo Language Support",
  "description": "The official VSCode extenstion for the Komodo Programming Language",
  "version": "0.0.1",
  "repository": {
		"type": "git",
		"url": "https://github.com/Rayshard/komodo-pl/tree/main/Komodo/editors/vscode"
	},
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:komodo-lang"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Komodo",
      "properties": {
        "komodo.binaryPath": {
          "type": "string",
          "default": false,
          "description": "The path to the komodo binary file."
        }
      }
    },
    "languages": [
      {
        "id": "komodo-lang",
        "aliases": [
          "Komodo"
        ],
        "extensions": [
          "kmd",
          "kmd.ir"
        ]
      }
    ],
    "commands": []
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.69.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
